{
  "compilerOptions": {
    "outDir": "./dist/",
    "alwaysStrict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es5",
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "suppressExcessPropertyErrors": true,
    "declaration": true
  },
  "exclude": ["node_modules"]
}
